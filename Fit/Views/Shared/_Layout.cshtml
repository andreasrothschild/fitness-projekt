<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My ASP.NET Application</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,400italic,500,500italic,700,700italic,900,900italic,300italic,300,100italic,100' rel='stylesheet' type='text/css'>
    @Styles.Render("~/Content/")
    

</head>
<body>
    <nav>
        <ul>
            <li>
                <a href="@Url.Action("Index", "Home")">
                    <i class="icon-home"></i>
                    <span>Home</span>
                </a>
            </li>
            <li>
                <a href="/Exercises/Index">
                    <i class="icon-user"></i>
                    <span>Excercies</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("About", "Home")">
                    <i class="icon-user"></i>
                    <span>About</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Contact", "Home")">
                    <i class="icon-envelope"></i>
                    <span>Contact</span>
                </a>
            </li>
        </ul>
        @Html.Partial("_LoginPartial")
    </nav>
    <main>
        @RenderBody()
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/Content")
    @RenderSection("scripts", required: false)
</body>
</html>
